---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import About from "@/components/sections/About.astro";
import Education from "@/components/sections/Education.astro";
import Experience from "@/components/sections/Experience.astro";
import Hero from "@/components/sections/Hero.astro";
import Projects from "@/components/sections/Projects.astro";
import Skills from "@/components/sections/Skills.astro";
import Social from "@/components/sections/Social.astro";
import EnglishKeyboardManager from "@/components/EnglishKeyboardManager.astro";
import Languages from "@/components/sections/Languages.astro";

import { cvJson } from "@/const";
const langJson = cvJson.en;
const { name, label } = cvJson.en.basics;
---

<Layout title={`Portafolio de ${name} - ${label}`} json={langJson.basics}>
  <main>
    <Section>
      <Hero json={langJson.basics} />
    </Section>

    <Section title="About me">
      <About json={langJson.basics} />
    </Section>

    <Section title="Work experience">
      <Experience json={langJson.work} />
    </Section>

    <Section title="Education">
      <Education json={langJson.education} />
    </Section>

    <Section title="Languages">
      <Languages json={langJson.languages} />
    </Section>

    <Section title="Projects">
      <Projects json={langJson.projects} />
    </Section>

    <Section title="Skills">
      <Skills json={langJson.skills} />
    </Section>

    <!-- <Section title="Social">
      <Social json={langJson.social} />
    </Section> -->
  </main>

  <EnglishKeyboardManager json={langJson.basics} />
</Layout>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }

  @media (width <= 700px) {
    main {
      padding: 1rem;
    }
  }
</style>
