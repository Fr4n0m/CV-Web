---
const { json } = Astro.props;

import { formatDateRange } from "@/utils";
---

<ul>
  {
    json.map(
      ({
        name,
        startDate,
        endDate,
        position,
        summary,
        highlights,
        url,
      }: {
        name: string;
        startDate: string;
        endDate: string | null;
        position: string;
        summary: string;
        highlights: string[];
        url: string;
      }) => {
        const years = formatDateRange(startDate, endDate);

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`Ver ${name}`} target="_blank">
                      {name}
                    </a>
                  </h3>
                  <h4>{position}</h4>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      }
    )
  }
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
    margin-bottom: 3px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 10px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
